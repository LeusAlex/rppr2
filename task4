<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8" />
  <title>Прогресс-бар асинхронной задачи</title>
  <style>
    #progress-bar {
      width: 100%;
      height: 20px;
      background: #eee;
      border-radius: 10px;
      overflow: hidden;
      margin: 20px 0;
    }
    #progress-bar-fill {
      height: 100%;
      width: 0;
      background: #007bff;
      transition: width 0.3s ease;
    }
  </style>
</head>
<body>

  <h1>Прогресс-бар асинхронной задачи</h1>
  <div id="progress-bar" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="0">
    <div id="progress-bar-fill"></div>
  </div>
  <p id="status"></p>

  <script>
    const progressBarFill = document.getElementById('progress-bar-fill');
    const status = document.getElementById('status');

    async function runTask() {
      status.textContent = 'Выполнение...';
      for (let i = 1; i <= 5; i++) {
        await new Promise(resolve => setTimeout(resolve, 1000));
        progressBarFill.style.width = `${i * 20}%`;
        progressBarFill.parentElement.setAttribute('aria-valuenow', i * 20);
      }
      status.textContent = 'Готово!';
    }

    runTask();
  </script>

</body>
</html>
